# Azure OpenAI Configuration Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Azure OpenAI Endpoint (replace with your Azure OpenAI endpoint)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Azure OpenAI API Key (get from Azure Portal -> Keys and Endpoint)
AZURE_OPENAI_API_KEY=your_actual_api_key_here

# Azure OpenAI API Version
AZURE_OPENAI_API_VERSION=2024-02-01

# Model Deployment Names (must match your deployed models in Azure)
EMBEDDING_MODEL=your_embedding_model_name
CHAT_MODEL=your_chat_model_name

# Optional: Rate limiting configuration
MAX_EMBEDDING_REQUESTS_PER_MINUTE=120
MAX_EMBEDDING_TOKENS_PER_MINUTE=20000

# Optional: Retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1